<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--bottom tab menu style-->
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/tab_menu_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--DayTheme for default theme-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="background">@color/white</item>
        <item name="barTitleColor">@color/bar_title</item>
        <item name="barColor">@color/barColor</item>
        <item name="textColor">@color/text_color</item>
        <item name="textLight">@color/text_light</item>
        <item name="textBright">@color/primary</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="textColorFirst">@color/textColorFirst_Day</item>
    </style>

    <!--theme for details-->
    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">
            @android:color/transparent
        </item>
    </style>

    <!--theme for item_reading-->
    <style name="CustomCollectionTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_collect</item>
    </style>

    <style name="CardView.Content" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>
</resources>
